<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/happyBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:background="#1A237E"
        android:fontFamily="@font/great_vibes_regular"
        android:text="Happiest Birthday!!"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/happyBirthday"
        android:layout_below="@+id/happyBirthday"
        android:fontFamily="@font/great_vibes_regular"
        android:textStyle="bold"
        android:background="#1A237E"
        android:text="Ankita"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_below="@id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:scaleType="center"
        android:src="@drawable/birthday" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/great_vibes_regular"
        android:textStyle="bold"
        android:background="#1A237E"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:gravity="left"
        android:text="From Deepti"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

</RelativeLayout>
